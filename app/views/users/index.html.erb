<div class="body">
	<div class="container">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<%= link_to edit_user_path(current_user) do %>
				<i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_6144" >
				</i>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-xs-3">
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>
		<h4>Title</h4>
			<%= f.text_field :title %>
		<h4>Opinion</h4>
			<%= f.text_area :body %>
			<%= f.submit 'Create Book' %>
		<% end %>
	</div>
</div>